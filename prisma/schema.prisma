generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ─── Enums (Phase 1: AI Generation) ───

enum JobStatus {
  queued
  processing
  review
  approved
  failed
}

enum JobPriority {
  high
  normal
  low
}

enum JobTrigger {
  manual
  auto_sync
  batch
}

// ─── Scraper tables (introspected from Supabase) ───

model Product {
  id                      Int               @id @default(autoincrement())
  article_number          String            @unique
  product_name            String?
  product_type            String?
  description             String?
  price_currency          String?           @default("USD")
  price_current           Float?            @db.Real
  price_original          Float?            @db.Real
  color                   String?
  designer                String?
  assembly_required       Boolean?
  avg_rating              Float?            @db.Real
  review_count            Int?
  category_path           String?
  style                   String?
  good_to_know            String?
  materials               String?
  care_instructions       String?
  important_notes         String?
  product_width           String?
  product_height          String?
  product_depth           String?
  product_length          String?
  product_weight          String?
  package_width           String?
  package_height          String?
  package_length          String?
  package_weight          String?
  highlighted_reviews     Json?
  variants                Json?
  key_facts               Json?
  recommended_accessories Json?
  source_url              String?
  source_retailer         String            @default("ikea")
  raw_data                String?
  scrape_error            String?
  scraped_at              DateTime          @default(now()) @db.Timestamptz(6)
  updated_at              DateTime          @default(now()) @db.Timestamptz(6)

  // Phase 1: AI Generation pipeline fields
  guide_status            String            @default("none") // none/queued/generating/in_review/published/no_source_material
  first_detected_at       DateTime?         @db.Timestamptz(6)
  last_scraped_at         DateTime?         @db.Timestamptz(6)
  is_new                  Boolean           @default(false)
  discontinued            Boolean           @default(false)

  documents               ProductDocument[]
  images                  ProductImage[]
  savedBy                 SavedProduct[]
  assemblyGuide           AssemblyGuide?
  aiGenerationJobs        AIGenerationJob[]

  @@index([article_number], map: "idx_products_article")
  @@index([source_retailer], map: "idx_products_retailer")
  @@index([price_current], map: "idx_products_price")
  @@index([avg_rating], map: "idx_products_rating")
  @@index([assembly_required], map: "idx_products_assembly")
  @@index([category_path], map: "idx_products_category")
  @@map("products")
}

model ProductImage {
  id         Int     @id @default(autoincrement())
  product_id Int
  url        String
  alt_text   String?
  sort_order Int?    @default(0)
  product    Product @relation(fields: [product_id], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@unique([product_id, url])
  @@index([product_id], map: "idx_images_product")
  @@map("product_images")
}

model ProductDocument {
  id              Int       @id @default(autoincrement())
  product_id      Int
  document_type   String
  source_url      String
  local_path      String?
  file_hash       String?
  file_size_bytes Int?
  page_count      Int?
  downloaded_at   DateTime? @db.Timestamptz(6)
  product         Product   @relation(fields: [product_id], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@unique([product_id, source_url])
  @@index([file_hash], map: "idx_documents_hash")
  @@index([product_id], map: "idx_documents_product")
  @@map("product_documents")
}

/// This table contains check constraints and requires additional setup for migrations. Visit https://pris.ly/d/check-constraints for more info.
model ScrapeUrl {
  id             Int      @id @default(autoincrement())
  url            String   @unique
  article_number String?
  status         String   @default("pending")
  attempts       Int      @default(0)
  last_error     String?
  created_at     DateTime @default(now()) @db.Timestamptz(6)
  updated_at     DateTime @default(now()) @db.Timestamptz(6)

  @@index([article_number], map: "idx_scrape_urls_article")
  @@index([status], map: "idx_scrape_urls_status")
  @@map("scrape_urls")
}

// ─── Auth tables (NextAuth) ───

model User {
  id             String         @id @default(cuid())
  name           String?
  email          String         @unique
  hashedPassword String?
  role           String         @default("user")
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  sessions       Session[]
  savedProducts  SavedProduct[]

  @@map("users")
}

model SavedProduct {
  id        String   @id @default(cuid())
  userId    String
  productId Int
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
  @@map("saved_products")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// ─── Assembly Guides ───

model AssemblyGuide {
  id          String         @id @default(cuid())
  productId   Int            @unique
  title       String
  description String?
  difficulty  String         @default("medium") // easy, medium, hard
  timeMinutes Int?
  tools       String?
  published   Boolean        @default(false)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  product     Product        @relation(fields: [productId], references: [id], onDelete: Cascade)
  steps       AssemblyStep[]

  @@map("assembly_guides")
}

model AssemblyStep {
  id          String        @id @default(cuid())
  guideId     String
  stepNumber  Int
  title       String
  instruction String
  tip         String?
  imageUrl    String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  guide       AssemblyGuide @relation(fields: [guideId], references: [id], onDelete: Cascade)

  @@unique([guideId, stepNumber])
  @@map("assembly_steps")
}

// ─── AI Generation (Phase 1) ───

model AIGenerationJob {
  id              String      @id @default(cuid())
  productId       Int
  status          JobStatus   @default(queued)
  modelPrimary    String?
  modelSecondary  String?
  inputPdfUrl     String?
  rawOutput       Json?
  confidenceScore Float?      @db.Real
  qualityFlags    Json?
  reviewedBy      String?
  reviewNotes     String?
  priority        JobPriority @default(normal)
  triggeredBy     JobTrigger  @default(manual)
  createdAt       DateTime    @default(now())
  completedAt     DateTime?
  product         Product     @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([status])
  @@index([priority])
  @@map("ai_generation_jobs")
}

model AIGenerationConfig {
  id                    String   @id @default(cuid())
  name                  String
  version               Int      @default(1)
  promptTemplate        String?
  modelConfig           Json?
  isActive              Boolean  @default(false)
  autoPublishThresholds Json?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@map("ai_generation_configs")
}
