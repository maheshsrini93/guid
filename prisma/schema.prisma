generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ─── Enums (Phase 1: AI Generation) ───

enum JobStatus {
  queued
  processing
  review
  approved
  failed
}

enum JobPriority {
  high
  normal
  low
}

enum JobTrigger {
  manual
  auto_sync
  batch
}

// ─── Scraper tables (introspected from Supabase) ───

model Product {
  id                      Int               @id @default(autoincrement())
  article_number          String            @unique
  product_name            String?
  product_type            String?
  description             String?
  price_currency          String?           @default("USD")
  price_current           Float?            @db.Real
  price_original          Float?            @db.Real
  color                   String?
  designer                String?
  assembly_required       Boolean?
  avg_rating              Float?            @db.Real
  review_count            Int?
  category_path           String?
  style                   String?
  good_to_know            String?
  materials               String?
  care_instructions       String?
  important_notes         String?
  product_width           String?
  product_height          String?
  product_depth           String?
  product_length          String?
  product_weight          String?
  package_width           String?
  package_height          String?
  package_length          String?
  package_weight          String?
  highlighted_reviews     Json?
  variants                Json?
  key_facts               Json?
  recommended_accessories Json?
  source_url              String?
  source_retailer         String            @default("ikea")
  raw_data                String?
  scrape_error            String?
  scraped_at              DateTime          @default(now()) @db.Timestamptz(6)
  updated_at              DateTime          @default(now()) @db.Timestamptz(6)

  // Phase 1: AI Generation pipeline fields
  guide_status            String            @default("none") // none/queued/generating/in_review/published/no_source_material/submission_received
  first_detected_at       DateTime?         @db.Timestamptz(6)
  last_scraped_at         DateTime?         @db.Timestamptz(6)
  is_new                  Boolean           @default(false)
  discontinued            Boolean           @default(false)

  // Phase 5: Multi-retailer fields
  retailerId              String?
  manufacturerSku         String?
  upcEan                  String?
  matchGroupId            String?
  matchConfidence         Float?            @db.Real
  retailer                Retailer?         @relation(fields: [retailerId], references: [id], onDelete: SetNull)

  documents               ProductDocument[]
  images                  ProductImage[]
  savedBy                 SavedProduct[]
  assemblyGuide           AssemblyGuide?
  aiGenerationJobs        AIGenerationJob[]
  guideSubmissions        GuideSubmission[]
  chatSessions            ChatSession[]
  videoSubmissions        VideoSubmission[]

  @@index([article_number], map: "idx_products_article")
  @@index([source_retailer], map: "idx_products_retailer")
  @@index([price_current], map: "idx_products_price")
  @@index([avg_rating], map: "idx_products_rating")
  @@index([assembly_required], map: "idx_products_assembly")
  @@index([category_path], map: "idx_products_category")
  @@index([retailerId], map: "idx_products_retailer_id")
  @@map("products")
}

model ProductImage {
  id         Int     @id @default(autoincrement())
  product_id Int
  url        String
  alt_text   String?
  sort_order Int?    @default(0)
  product    Product @relation(fields: [product_id], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@unique([product_id, url])
  @@index([product_id], map: "idx_images_product")
  @@map("product_images")
}

model ProductDocument {
  id              Int       @id @default(autoincrement())
  product_id      Int
  document_type   String
  source_url      String
  local_path      String?
  file_hash       String?
  file_size_bytes Int?
  page_count      Int?
  downloaded_at   DateTime? @db.Timestamptz(6)
  product         Product   @relation(fields: [product_id], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@unique([product_id, source_url])
  @@index([file_hash], map: "idx_documents_hash")
  @@index([product_id], map: "idx_documents_product")
  @@map("product_documents")
}

/// This table contains check constraints and requires additional setup for migrations. Visit https://pris.ly/d/check-constraints for more info.
model ScrapeUrl {
  id             Int      @id @default(autoincrement())
  url            String   @unique
  article_number String?
  status         String   @default("pending")
  attempts       Int      @default(0)
  last_error     String?
  created_at     DateTime @default(now()) @db.Timestamptz(6)
  updated_at     DateTime @default(now()) @db.Timestamptz(6)

  @@index([article_number], map: "idx_scrape_urls_article")
  @@index([status], map: "idx_scrape_urls_status")
  @@map("scrape_urls")
}

// ─── Auth tables (NextAuth) ───

model User {
  id                   String         @id @default(cuid())
  name                 String?
  email                String         @unique
  hashedPassword       String?
  role                 String         @default("user")
  subscriptionTier     String         @default("free")
  subscriptionSource   String?        // "stripe" | "apple" | "google"
  stripeCustomerId     String?        @unique
  stripeSubscriptionId String?        @unique
  subscriptionEndsAt   DateTime?
  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt
  sessions         Session[]
  savedProducts    SavedProduct[]
  guideSubmissions GuideSubmission[]
  chatSessions     ChatSession[]
  creatorProfile   CreatorProfile?
  videoVotes       VideoVote[]
  pushTokens       DevicePushToken[]
  guideProgress    GuideProgress[]

  @@map("users")
}

model SavedProduct {
  id        String   @id @default(cuid())
  userId    String
  productId Int
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
  @@map("saved_products")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// ─── Assembly Guides ───

model AssemblyGuide {
  id          String         @id @default(cuid())
  productId   Int            @unique
  title       String
  description String?
  difficulty  String         @default("medium") // easy, medium, hard
  timeMinutes Int?
  tools       String?
  published   Boolean        @default(false)
  aiGenerated Boolean        @default(false) // true when created by AI pipeline
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  product     Product        @relation(fields: [productId], references: [id], onDelete: Cascade)
  steps       AssemblyStep[]

  @@map("assembly_guides")
}

model AssemblyStep {
  id          String        @id @default(cuid())
  guideId     String
  stepNumber  Int
  title       String
  instruction String
  tip         String?
  imageUrl    String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  guide       AssemblyGuide @relation(fields: [guideId], references: [id], onDelete: Cascade)

  @@unique([guideId, stepNumber])
  @@map("assembly_steps")
}

// ─── AI Generation (Phase 1) ───

model AIGenerationJob {
  id              String      @id @default(cuid())
  productId       Int
  status          JobStatus   @default(queued)
  modelPrimary    String?
  modelSecondary  String?
  inputPdfUrl     String?
  rawOutput       Json?
  confidenceScore Float?      @db.Real
  qualityFlags    Json?
  reviewedBy      String?
  reviewNotes     String?
  priority        JobPriority @default(normal)
  triggeredBy     JobTrigger  @default(manual)
  attempts        Int         @default(0)
  maxAttempts     Int         @default(3)
  lastError       String?
  autoPublished   Boolean     @default(false)
  submissionId    String?
  submission      GuideSubmission? @relation(fields: [submissionId], references: [id], onDelete: SetNull)
  startedAt       DateTime?
  createdAt       DateTime    @default(now())
  completedAt     DateTime?
  product         Product              @relation(fields: [productId], references: [id], onDelete: Cascade)
  corrections     ReviewerCorrection[]

  @@index([productId])
  @@index([status])
  @@index([priority])
  @@index([status, priority, createdAt])
  @@map("ai_generation_jobs")
}

model ReviewerCorrection {
  id             String          @id @default(cuid())
  jobId          String
  stepNumber     Int
  field          String          // "title" | "instruction"
  originalValue  String
  correctedValue String
  category       String          // CorrectionCategory — e.g., "incorrect_part_name", "unclear_instruction"
  reviewerNotes  String?
  reviewedBy     String?
  createdAt      DateTime        @default(now())
  job            AIGenerationJob @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@index([jobId])
  @@index([category])
  @@map("reviewer_corrections")
}

model AIGenerationConfig {
  id                    String   @id @default(cuid())
  name                  String
  version               Int      @default(1)
  promptTemplate        String?
  modelConfig           Json?
  isActive              Boolean  @default(false)
  autoPublishThresholds Json?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@map("ai_generation_configs")
}

// ─── Catalog Sync (Phase 1.5) ───

model CatalogSyncLog {
  id               String   @id @default(cuid())
  retailer         String   @default("ikea")
  newProducts      Int      @default(0)
  updatedProducts  Int      @default(0)
  delistedProducts Int      @default(0)
  jobsQueued       Int      @default(0)
  pdfUpdates       Int      @default(0)
  errors           Int      @default(0)
  errorDetails     Json?
  duration         Int?     // ms
  triggeredBy      String   @default("cron") // cron | manual
  createdAt        DateTime @default(now())

  @@index([createdAt])
  @@map("catalog_sync_logs")
}

// ─── Search Analytics ───

model SearchEvent {
  id          String   @id @default(cuid())
  eventType   String   // search_query, search_autocomplete, search_zero_results, search_discovery
  query       String?
  method      String?  // text, article_number, url, recent, barcode
  resultCount Int?
  clickedId   Int?     // product ID if user clicked a result
  sessionId   String?  // anonymous session tracking
  userId      String?
  createdAt   DateTime @default(now())

  @@index([eventType])
  @@index([createdAt])
  @@index([query])
  @@map("search_events")
}

// ─── Community Guide Submissions (Phase 1.5) ───

model GuideSubmission {
  id            String    @id @default(cuid())
  productId     Int
  userId        String
  status        String    @default("pending") // pending/approved/rejected/needs_info/processing
  textContent   String?
  photos        Json?     // Array of photo URLs (Supabase Storage)
  videoLinks    Json?     // Array of video URLs
  externalLinks Json?     // Array of external resource URLs
  toolsList     String?
  estimatedTime Int?      // minutes
  difficulty    String?   // easy/medium/hard
  reviewedBy    String?
  reviewNotes   String?
  reviewedAt    DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  product            Product            @relation(fields: [productId], references: [id], onDelete: Cascade)
  user               User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  aiGenerationJobs   AIGenerationJob[]

  @@index([productId])
  @@index([userId])
  @@index([status])
  @@map("guide_submissions")
}

// ─── Chat (Phase 3: AI Troubleshooting Assistant) ───

model ChatSession {
  id         String   @id @default(cuid())
  userId     String?  @map("user_id")
  productId  Int?     @map("product_id")
  status     String   @default("active") // active, resolved, abandoned
  resolution String?  // solved, unsolved, escalated
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  user     User?         @relation(fields: [userId], references: [id], onDelete: SetNull)
  product  Product?      @relation(fields: [productId], references: [id], onDelete: SetNull)
  messages ChatMessage[]

  @@index([userId])
  @@index([productId])
  @@index([status])
  @@map("chat_sessions")
}

model ChatMessage {
  id        String   @id @default(cuid())
  sessionId String   @map("session_id")
  role      String   // user, assistant
  content   String
  imageUrl  String?  @map("image_url")
  createdAt DateTime @default(now()) @map("created_at")

  session ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
  @@map("chat_messages")
}

// ─── Creator Profiles & Video Submissions (Phase 4: Premium) ───

model CreatorProfile {
  id                String   @id @default(cuid())
  userId            String   @unique
  youtubeChannelUrl String
  youtubeChannelId  String?
  channelName       String
  subscriberCount   Int?
  isVerified        Boolean  @default(false)
  totalVideos       Int      @default(0)
  totalHelpfulVotes Int      @default(0)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  videoSubmissions VideoSubmission[]

  @@map("creator_profiles")
}

model VideoSubmission {
  id             String    @id @default(cuid())
  productId      Int
  creatorId      String
  youtubeUrl     String
  youtubeVideoId String
  title          String
  description    String?
  language       String    @default("en")
  stepsCovered   Json?
  status         String    @default("pending") // pending/approved/rejected
  helpfulVotes   Int       @default(0)
  unhelpfulVotes Int       @default(0)
  reviewedBy     String?
  reviewNotes    String?
  reviewedAt     DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  product Product        @relation(fields: [productId], references: [id], onDelete: Cascade)
  creator CreatorProfile @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  votes   VideoVote[]

  @@index([productId])
  @@index([creatorId])
  @@index([status])
  @@map("video_submissions")
}

model VideoVote {
  id                String   @id @default(cuid())
  videoSubmissionId String
  userId            String
  vote              String   // "up" | "down"
  createdAt         DateTime @default(now())

  videoSubmission VideoSubmission @relation(fields: [videoSubmissionId], references: [id], onDelete: Cascade)
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([videoSubmissionId, userId])
  @@index([videoSubmissionId])
  @@index([userId])
  @@map("video_votes")
}

// ─── Retailers (Phase 5: Multi-Retailer) ───

model Retailer {
  id              String    @id @default(cuid())
  name            String
  slug            String    @unique
  logoUrl         String?
  baseUrl         String
  adapterType     String
  isActive        Boolean   @default(true)
  lastSyncAt      DateTime?
  nextSyncAt      DateTime?
  affiliateConfig Json?
  rateLimitConfig Json?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  products        Product[]

  @@map("retailers")
}

// ─── Push Notifications (Phase 6: Mobile) ───

model DevicePushToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  platform  String   // "ios" | "android"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("device_push_tokens")
}

// ─── Guide Progress (Phase 6: Mobile) ───

model GuideProgress {
  id            String   @id @default(cuid())
  userId        String
  articleNumber String
  currentStep   Int      @default(0)
  updatedAt     DateTime @updatedAt
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, articleNumber])
  @@index([userId])
  @@map("guide_progress")
}
