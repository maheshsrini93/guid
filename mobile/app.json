{
  "expo": {
    "name": "Guid",
    "slug": "guid",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "guid",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#f59e0b"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "how.guid.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Guid uses your camera to scan product barcodes and photograph labels for product identification.",
        "NSPhotoLibraryUsageDescription": "Guid accesses your photos to upload images for AI troubleshooting assistance."
      },
      "associatedDomains": ["applinks:guid.how"]
    },
    "android": {
      "package": "how.guid.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#f59e0b"
      },
      "edgeToEdgeEnabled": true,
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "guid.how",
              "pathPrefix": "/products"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-sqlite",
      [
        "expo-camera",
        {
          "cameraPermission": "Guid uses your camera to scan product barcodes and photograph labels.",
          "recordAudioAndroid": false
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Guid accesses your photos to upload images for AI troubleshooting."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#f59e0b"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
